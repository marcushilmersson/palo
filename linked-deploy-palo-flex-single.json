{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vmName": {
        "type": "string",
        "defaultValue": "pan-fw001",
        "metadata": { 
          "description": "Name of VM-Series FW in the Azure portal."
        }
      },
      "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D3_v2",
      "allowedValues": [
          "Standard_D3",
          "Standard_D4",
          "Standard_D3_v2",
          "Standard_D4_v2",
          "Standard_A4",
          "Standard_DS3_v2",
          "Standard_DS4_v2"
        ],
        "metadata": {
          "description": "Azure VM size for VM-Series"
        }
      },
      "vmImageVersion": {
        "type": "string",
        "defaultValue": "latest",
        "metadata": {
          "description": "PAN OS Version | az vm image list -l westeurope -p paloaltonetworks --all"
        }
      },
      "vmImageSku": {
        "type": "string",
        "defaultValue": "byol",
        "allowedValues": [
          "byol",
          "bundle1",
          "bundle2"
        ],
        "metadata": {
          "description": "Firewall License Model"
        }
      },
      "storageAccountName": {
        "type": "string",
        "defaultValue": "panbootdiag",
        "metadata": {
          "description": "Name of storage acount for boot diagnostics"
        }
      },
      "storageAccountType": {
        "type": "string",
        "defaultValue": "Standard_LRS",
        "allowedValues": [
          "Standard_LRS",
          "Standard_GRS",
          "Standard_RAGRS",
          "Standard_ZRS",
          "Premium_LRS"
        ],
        "metadata": {
          "description": "Storage Account type"
        } 
      },
      "mgmtSubnetName": {
        "type": "string",
        "defaultValue": "sn-mgmt",
        "metadata": {
          "description": "Subnet for Management"
        }
      },
      "externalSubnetName": {
        "type": "string",
        "defaultValue": "sn-external",
        "metadata": {
          "description": "Subnet for External"
        }
      },
      "internalSubnetName": {
        "type": "string",
        "defaultValue": "sn-internal",
        "metadata": {
          "description": "Subnet for Internal"
        }
      },
      "mgmtSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.0.64/28",
        "metadata": {
          "description": "Mgmt subnet CIDR"
        }
      },
      "externalSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.0.16/28",
        "metadata": {
          "description": "External subnet CIDR"
        }
      },
      "internalSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.0.0/28",
        "metadata": {
          "description": "EXISTING internal subnet CIDR"
        }
      },
      "mgmtSubnetIpAddress": {
        "type": "string",
        "defaultValue": "10.0.0.68",
        "metadata": {
          "description": "Static IP-address for the FW in the management subnet."
        }
      },
      "externalSubnetIpAddress": {
        "type": "string",
        "defaultValue": "10.0.0.20",
        "metadata": {
          "description": "Static IP-address for the FW in the external subnet."
        }
      },
      "internalSubnetIpAddress": {
        "type": "string",
        "defaultValue": "10.0.0.6",
        "metadata": {
          "description": "Static IP-address for the FW in the internal subnet."
        }
      },
      "ilbInternalIpAddress": {
        "type": "string",
        "defaultValue": "10.0.0.4",
        "metadata": {
          "description": "Static IP-address for the internal subnet loadbalancer."
        }
      },
      "adminUsername": {
        "type": "string",
        "defaultValue": "panadmin",
        "metadata": {
          "description": "Username of the administrator account of VM-Series"
        }
      },
      "vaultName": {
        "type": "string",
        "metadata": {
          "description": "The name of the keyvault that contains the secret."
        }
      },
      "vaultSecretName": {
        "type": "string",
        "metadata": {
          "description": "The name of the secret."
        }
      },
      "vaultResourceGroupName": {
        "type": "string",
        "metadata": {
          "description": "The name of the resource group that contains the keyvault."
        }
      },
      "adminPassword": {
        "type": "securestring",
        "defaultValue": "",
        "metadata": {
          "description": "Password for the administrator account of VM-Series"
        }
      },
      "elbName": {
        "type": "string",
        "metadata": {
          "description": "The name of the External Load Balancer."
        }
      },
      "elbFrontendIPConfigName": {
        "type": "string",
        "metadata": {
          "description": "The name of the External Load Balancer frontend IP configuration."
        }
      },
      "elbBackendAddressPoolName": {
        "type": "string",
        "metadata": {
          "description": "The name of the External Load Balancer backend pool."
        }
      },
      "elbProbeName": {
        "type": "string",
        "metadata": {
          "description": "The name of the External Load Balancer probe."
        }
      },
      "elbPipName": {
        "type": "string",
        "metadata": {
          "description": "The name of the External Load Balancer Public IP Address."
        }
      },
      "ilbName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Internal Load Balancer."
        }
      },
      "ilbFrontendIPConfigName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Internal Load Balancer frontend IP configuration."
        }
      },
      "ilbBackendAddressPoolName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Internal Load Balancer backend pool."
        }
      },
      "ilbProbeName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Internal Load Balancer probe."
        }
      },
      "lbrName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Load Balancing Rule."
        }
      },
      "vmExtPipName": {
        "type": "string",
        "metadata": {
          "description": "The name of the External interface Public IP Address."
          }
        },
      "vmMgmtPipName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Management interface Public IP Address."
          }
        },
      "vmMgmtNicName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Management interface."
          }
        },
      "vmExternalNicName": {
        "type": "string",
        "metadata": {
          "description": "The name of the External interface."
          }
        },
      "vmInternalNicName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Internal interface."
          }
        },
      "asName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Availability Set."
        }
      }
    },
    "variables": {
      
      "resourceGroupName":  "[resourceGroup().name]",
      "vmName": "[parameters('vmName')]",
      "vmImagePublisher": "paloaltonetworks",
      "vmImageOffer": "vmseries-flex",

      "asName": "[parameters('asName')]",
      "asId": "[resourceId('Microsoft.Compute/availabilitySets',variables('asName'))]"
    },

    "resources": [
      {
        "comments": "PaloDeploy",
        "apiVersion": "2018-06-01",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('vmNames')]",
        "location": "[resourceGroup().location]",
        "plan": {
          "name": "[parameters('vmImageSku')]",
          "product": "[variables('vmImageOffer')]",
          "publisher": "[variables('vmImagePublisher')]"
        },
        "properties": {
          "availabilitySet": {
            "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('asName'))]"
          },
          "hardwareProfile": {
            "vmSize": "[parameters('vmSize')]"
          },
          "osProfile": {
            "computerName": "[variables('vmNames')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "[variables('vmImagePublisher')]",
              "offer": "[variables('vmImageOffer')]",
              "sku": "[parameters('vmImageSku')]",
              "version": "[parameters('vmImageVersion')]"
            },
            "osDisk": {
              "name": "[concat(variables('vmNames'),'_','OsDisk')]",
              "caching": "ReadWrite",
              "createOption": "FromImage"
            }
          },
            "diagnosticsProfile": {
              "bootDiagnostics": {
                "enabled": "true",
                "storageUri": "[concat('https://', parameters('StorageAccountName'), '.blob.core.windows.net')]"
              }
            },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmMgmtNicName'))]",
                "properties": {
                  "primary": true
                }
              },
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmExternalNicName'))]",
                "properties": {
                  "primary": false
                }
              },
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmInternalNicName'))]",
                "properties": {
                  "primary": false
                }
              }
            ]
          }
        }
      }
    ]
  }